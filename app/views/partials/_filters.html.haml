.hidden-xs.clearfix
  .dropdowns.pull-right
    .dropdown.width-240
      %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
        = Book::FILTERS[@filter.to_sym]
        %i.fa.fa-angle-down.dropdown-icon.pull-right
      %ul.dropdown-menu
        - Book::FILTERS.each_pair do |filter, title|
          %li= link_to title, categories_path(filter: filter)
  %ul.list-inline.pt-10.mb-25.mr-240
    %li.mr-35
      = link_to(categories_path, class: 'filter-link') do
        All
        %span.badge.general-badge= Book.count
    - categories.each do |category|
      %li.mr-35
        = link_to(category_path(category.id), class: 'filter-link') do
          = category.title
          %span.badge.general-badge= qunatity_book_in_category(category.id)
.dropdowns.mb-25.visible-xs
  %p.lead.small.mb-10 Filter by category
  .dropdown
    %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
      All
      %i.fa.fa-angle-down.dropdown-icon.pull-right
    %ul.dropdown-menu
      %li= link_to 'All', categories_path, class: 'filter-link'
      - categories.each do |category|
        %li= link_to category.title, category_path(category.id), class: 'filter-link'
  %p.lead.small.mb-10 Sort by
  .dropdown
    %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
      = Book::FILTERS[@filter.to_sym]
      %i.fa.fa-angle-down.dropdown-icon.pull-right
    %ul.dropdown-menu
      - Book::FILTERS.each_pair do |filter, title|
        %li= link_to title, categories_path(filter: filter)
